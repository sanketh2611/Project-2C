FROM redhat/ubi9:latest
MAINTAINER sankethreddy26@gmail.com
ENV tomcat_test 123
RUN apt update -y
RUN mkdir -p /opt/tomcat/
WORKDIR /opt/tomcat
RUN curl -O https://archive.apache.org/dist/tomcat/tomcat-7/v7.0.109/bin/apache-tomcat-7.0.109.tar.gz
RUN tar -xvf apache-tomcat-7.0.109.tar.gz
RUN mv apache-tomcat-7.0.109/* /opt/tomcat/
RUN apt -y install java-1.8.0*
RUN java -version
WORKDIR /opt/tomcat/webapps
COPY  COPY target/webapp.war /opt/tomcat/webapps/
EXPOSE 9090
CMD ["/opt/tomcat/bin/catalina.sh", "run"]

